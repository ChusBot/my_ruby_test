<%= form_with model: user do |form| %>
  <div>
    <%= form.label :chat_id, "Chat ID:" %><br>
    <%= form.text_field :chat_id%>
    <%= user.errors.full_messages_for(:chat_id).each do |message|%>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :name, "User name:" %><br>
    <%= form.text_field :name %>
    <%= user.errors.full_messages_for(:name).each do |message|%>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>